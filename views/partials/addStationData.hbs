<form class="ui stacked segment form" action="/station/{{station.id}}/addReading" method="POST">
  <div class="field">
    <label>Current Weather</label>
    <input placeholder="Weather code" type="text" name="code">
  </div>
  
  <div class="field">
    <label>Temperature</label>
    <input placeholder="Temperature" type="text" name="temp">
  </div>
  
  <div class="field">
    <label>Wind Speed</label>
    <input placeholder="Wind Speed" type="text" name="wSpeed">
  </div>
  
  <div class="field">
   <label>Wind Direction</label>
   <input placeholder="Wind Direction" type="text" name="wDir">
  </div>
  
  <div class="field">
    <label>Pressure</label>
    <input placeholder="Pressure" type="text" name="pressure">  
  </div>
  
  <button class="ui inverted primary fluid ui button">Add Reading</button> 
</form>
